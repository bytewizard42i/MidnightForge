{
  "name": "example-counter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "workspaces": [
    "nft-contract",
    "compact",
    "midnight-forge-server",
    "midnight-forge-webapp-vite"
  ],
  "scripts": {
    "quickstart": "./start-standalone.sh",
    "standalone": "docker compose -f docker-compose.standalone.yml up --build",
    "standalone:hybrid": "npm run nft-contract:build && docker compose -f docker-compose.standalone-hybrid.yml up --build",
    "standalone:detached": "docker compose -f docker-compose.standalone.yml up -d --build",
    "standalone:stop": "docker compose -f docker-compose.standalone.yml down",
    "standalone:stop-hybrid": "docker compose -f docker-compose.standalone-hybrid.yml down",
    "standalone:clean": "docker compose -f docker-compose.standalone.yml down --volumes --remove-orphans",
        "standalone:dev": "concurrently \"npm run server:dev\" \"npm run webapp:dev\"",
    "blockchain:start": "docker compose -f docker-compose.blockchain.yml up -d",
    "blockchain:stop": "docker compose -f docker-compose.blockchain.yml down",
    "blockchain:restart": "docker compose -f docker-compose.blockchain.yml restart",
    "blockchain:logs": "docker compose -f docker-compose.blockchain.yml logs -f",
    "blockchain:logs:proof-server": "docker logs midnight-forge-proof-server -f",
    "blockchain:logs:indexer": "docker logs midnight-forge-indexer -f",
    "blockchain:logs:node": "docker logs midnight-forge-node -f",
    "blockchain:clean": "docker compose -f docker-compose.blockchain.yml down --volumes --remove-orphans",
    "blockchain:status": "docker compose -f docker-compose.blockchain.yml ps",
    "cleanup:containers": "docker stop midnight-forge-proof-server midnight-forge-node midnight-forge-indexer 2>/dev/null || true && docker rm midnight-forge-proof-server midnight-forge-node midnight-forge-indexer 2>/dev/null || true",
    "cleanup:all": "npm run blockchain:stop && npm run standalone:stop && npm run cleanup:containers && docker system prune -f",
    "apps:dev": "npm run nft-contract:build && concurrently --raw \"npm run server:dev\" \"npm run webapp:dev\"",
    "server:dev": "cd midnight-forge-server && npm run dev",
    "webapp:dev": "cd midnight-forge-webapp-vite && npm run dev",
    "build:all": "npm run nft-contract:build && npm run server:build && npm run webapp:build",
    "nft-contract:build": "cd nft-contract && npm run compact:combinedContract && npm run build:combinedContract",
    "server:build": "cd midnight-forge-server && npm run build",
    "webapp:build": "cd midnight-forge-webapp-vite && npm run build",
    "secrets:setup": "./setup-secrets.sh setup",
    "secrets:encrypt": "./setup-secrets.sh encrypt",
    "secrets:decrypt": "./setup-secrets.sh decrypt",
    "secrets:edit": "./setup-secrets.sh edit",
    "secrets:help": "./setup-secrets.sh help",
    "compact:install": "./setup-compact.sh install",
    "compact:check": "./setup-compact.sh check",
    "compact:unset": "./setup-compact.sh unset",
    "compact:help": "./setup-compact.sh help",
    "platform:configure": "./setup-platform.sh configure",
    "platform:show": "./setup-platform.sh show",
    "platform:restore": "./setup-platform.sh restore",
    "platform:help": "./setup-platform.sh help"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^24.0.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "testcontainers": "^11.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "@midnight-ntwrk/midnight-js-testing": "^2.0.0",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "2.0.2",
    "@midnight-ntwrk/midnight-js-types": "2.0.2",
    "@midnight-ntwrk/wallet": "5.0.0",
    "@midnight-ntwrk/wallet-api": "5.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.1"
  }
}
