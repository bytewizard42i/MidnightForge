{
  "name": "midnight-forge-server",
  "version": "1.0.0",
  "description": "TypeScript backend server for Midnight Forge contract deployment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test:deploy": "tsx test-deploy.ts",
    "test:mint": "vitest tests/mint-nft.test.ts 2>&1 | tee logs/mint-test-$(date +%Y%m%d-%H%M%S).log",
    "test:list": "vitest tests/list-nfts.test.ts 2>&1 | tee logs/list-test-$(date +%Y%m%d-%H%M%S).log",
    "test:metadata": "vitest tests/metadata-decoding.test.ts 2>&1 | tee logs/metadata-test-$(date +%Y%m%d-%H%M%S).log",
    "test:list-metadata": "vitest tests/list-nfts.test.ts -t \"Metadata Functionality\" 2>&1 | tee logs/list-metadata-test-$(date +%Y%m%d-%H%M%S).log",
    "test:list-only": "vitest tests/list-nfts.test.ts",
    "test:metadata-only": "vitest tests/metadata-decoding.test.ts",
    "test:list-metadata-only": "vitest tests/list-nfts.test.ts -t \"Metadata Functionality\" 2>&1 | tee logs/list-metadata-test-$(date +%Y%m%d-%H%M%S).log",
    "test:list-metadata-no-log": "vitest tests/list-nfts.test.ts -t \"Metadata Functionality\"",
    "test": "vitest tests/ 2>&1 | tee logs/all-tests-$(date +%Y%m%d-%H%M%S).log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "^2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-types": "^2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-utils": "^2.0.2",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.2",
    "@midnight-ntwrk/wallet": "^5.0.0",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "@midnight-forge/protocol-did-contract": "file:../contract",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^1.0.0",
    "node-fetch": "^3.3.2",
    "@types/node-fetch": "^2.6.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0"
} 